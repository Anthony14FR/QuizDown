{% extends 'base.html.twig' %}

{% block title %}Mes Badges{% endblock %}

{% block body %}
    <div class="container mx-auto p-4 max-w-4xl">
        <h1 class="text-2xl font-bold mb-6">Mes Badges</h1>

        {% if badges is empty %}
            <p>Aucun badge obtenu pour le moment.</p>
        {% else %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                {% for badge in badges %}
                    <div class="card bg-base-100 shadow-lg p-4 flex flex-col items-center text-center">
                        <img src="{{ asset('images/' ~ badge.getImagePath()) }}" alt="{{ badge.name }}">
                        <h2 class="text-xl font-bold mb-2">{{ badge.name }}</h2>
                        {% if badge.description %}
                            <p class="text-sm mb-2">{{ badge.description }}</p>
                        {% else %}
                            <p class="italic text-sm mb-2">Aucune description</p>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
