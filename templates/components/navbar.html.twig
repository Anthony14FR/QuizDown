{% if app.user %}
    <div class="navbar bg-base-100 shadow-lg mb-4">
        <div class="container mx-auto px-4">
            <div class="lg:hidden w-full">
                <div class="dropdown">
                    <label tabindex="0" class="btn btn-ghost">
                        <i class="fas fa-bars text-xl"></i>
                    </label>
                    <ul tabindex="0" class="dropdown-content menu menu-lg p-4 mt-3 z-[1] shadow bg-base-100 rounded-box w-[90vw]">
                        <li class="menu-title font-bold text-lg mb-2">Menu</li>
                        <li><a class="text-lg py-3"><i class="fas fa-home w-8"></i>Accueil</a></li>
                        <li><a class="text-lg py-3"><i class="fas fa-question-circle w-8"></i>Quiz</a></li>
                        <li><a class="text-lg py-3"><i class="fas fa-certificate w-8"></i>Mes certifications</a></li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li><a class="text-lg py-3"><i class="fas fa-cog w-8"></i>Dashboard Admin</a></li>
                        {% endif %}
                        <div class="divider"></div>
                        <li><a class="text-lg py-3"><i class="fas fa-user-circle w-8"></i>Mon profil</a></li>
                        <li><a href="{{ path('app_logout') }}" class="text-lg py-3"><i class="fas fa-sign-out-alt w-8"></i>Se déconnecter</a></li>
                    </ul>
                </div>
                <span class="ml-4 font-bold">{{ app.user.username }}</span>
            </div>

            <div class="hidden lg:flex justify-between w-full">
                <div class="flex gap-4">
                    <a href="{{ path('app_home') }}" class="btn btn-ghost gap-2">
                        <i class="fas fa-home"></i>
                        Accueil
                    </a>
                    <a href="{{ path('app_quiz_index') }}" class="btn btn-ghost gap-2">
                        <i class="fas fa-question-circle"></i>
                        Quiz
                    </a>
                    <a href="#" class="btn btn-ghost gap-2">
                        <i class="fas fa-certificate"></i>
                        Mes certifications
                    </a>
                </div>
                <div class="flex gap-4">
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_admin_dashboard') }}" class="btn btn-ghost gap-2">
                            <i class="fas fa-cog"></i>
                            Dashboard Admin
                        </a>
                    {% endif %}
                    <div class="dropdown dropdown-end">
                        <label tabindex="0" class="btn btn-ghost gap-2">
                            <i class="fas fa-user"></i>
                            {{ app.user.username }}
                        </label>
                        <ul tabindex="0" class="dropdown-content menu p-2 shadow bg-base-100 rounded-box w-52">
                            <li>
                                <a href="#" class="gap-2">
                                    <i class="fas fa-user-circle"></i>
                                    Mon profil
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('app_logout') }}" class="gap-2">
                                    <i class="fas fa-sign-out-alt"></i>
                                    Se déconnecter
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}
