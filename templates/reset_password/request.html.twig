{% extends 'base.html.twig' %}
{% block title %}Réinitialisation du mot de passe{% endblock %}
{% block body %}
   <div class="max-w-lg mx-auto p-6">
       <h1 class="text-2xl font-bold text-center text-primary mb-8">Réinitialiser votre mot de passe</h1>
       
       {% for flash_error in app.flashes('reset_password_error') %}
           <div class="alert alert-error mb-4" role="alert">{{ flash_error }}</div>
       {% endfor %}

       <div class="card bg-base-100 shadow-xl">
           <div class="card-body">
               {{ form_start(requestForm) }}
                   {{ form_row(requestForm.email, {
                       'attr': {'class': 'input input-bordered w-full'}
                   }) }}
                   <div class="text-sm text-gray-600 mb-4">
                       Entrez votre adresse email, nous vous enverrons un lien pour réinitialiser votre mot de passe.
                   </div>
                   <button class="btn btn-primary w-full">Envoyer le mail de réinitialisation</button>
               {{ form_end(requestForm) }}
           </div>
       </div>
   </div>
{% endblock %}

